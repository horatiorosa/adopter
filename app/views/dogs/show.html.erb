<head>
  <!-- include jQuery -->
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.js"></script>
  <!-- include Cycle2 -->
  <script src="../../assets/javascripts/jssor.slider.mini.js"></script>
  <script type="text/javascript" src="jquery-2.1.3.js"></script>
</head>
  
 <div class="logo profile-logo"><%= image_tag 'adoptr-logo.png' %></div>
<hr class="breakline">


<div class="row-1">
  <div class="col-md-12">
    <div id="slider1_container">
      <!-- Slides Container -->
      <div u="slides" class="slides">
        <div><%= image_tag @dog.image1.url(:medium) %></div>
        <!-- if image2 is nil, do not slide -->
        <div><%= image_tag @dog.image2.url %></div>
        <!-- if image3 is nil, do not slide -->
        <div><%= image_tag @dog.image3.url %></div>
      </div>
    </div>
  </div>
</div>

<div class="row-2">
  <div class="col-md-6 stats">
    <div class="lead"><h2>personality</h2></div>
    <!-- Progress Bar --> 
    <div class="progress">
      <div class="bar" style="width: 85%;"><%= @dog.age %></div>
      </div>  
      <div class="progress">
      <div class="bar" style="width: 75%;">demeanor</div>
      </div>    
      <div class="progress">
      <div class="bar" style="width: 100%;">plays well with others</div>
      </div> 
      <div class="progress">
      <div class="bar" style="width: 55%;">likes children</div>
      </div> 
      <div class="bar" style="width: 85%;">needs walks</div>
      </div>  
      <div class="progress">
      <div class="bar" style="width: 75%;">drool factor</div>     
      </div> 
    </div>
    <!-- Progress Bar End --> 
  </div>
</div>

<div class="row-2">
  <div class="col-md-6">
    <div class="lead"><h1>About<%= dog.name %></h1></div>
      <div id="dog_pro">
          <p>
          <%= @dog.animal_type %>
          <%= @dog.breed %>
          <%= @dog.sex %>
          <%= @dog.age %>
          <%= @dog.location %>
          <%= @dog.description %>
        </p>
        <p><%= link_to "Adopt Me", @dog.http %></p>
      </div>
  </div>
</div>

